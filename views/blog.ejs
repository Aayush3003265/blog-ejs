<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>HomePage</title>
</head>

<body>
    <%- include('./partials/navBar') %>
        <div class=" container  ml-9 w-64">
            <h1 class="text-3xl text-center">
                <%- blog.title %>
            </h1>
            <img class="w-64  align-middle" src="/<%= blog.coverImageUrl %>" alt="..no image">
            <p class="text-center"> <%- blog.body %></p>
            <p class="text-center">createdAt: <%- blog.createdAt %></p>
        </div>

        <% if (locals.user) { %>
            <div class="cotainer mt-3">
                <h1>Comments</h1>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-4">
                        <input type="text" id="content" name="content" placeholder="Enter your thoughts!!"
                            class="mt-1 block w-[180px] p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                            required />
                    </div>
                    <button class="bg-orange-400 rounded-md p-2" type="submit">Add Comment</button>
                </form>
            </div>
            <div class="mt-3">
                <div>
                    <h2>Comments (<%= comments.length %>)</h2>
                    <% comments.forEach(comment=> { %>
                        <div>
                            <p><strong>
                                    <%= comment.createdBy.name %>
                                </strong>: <%= comment.content %>
                            </p>
                        </div>
                        <% }) %>
                </div>

            </div>
            <% } %>



                <%- include('./partials/script') %>
</body>

</html>